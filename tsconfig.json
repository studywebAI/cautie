{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": ["webworker", "esnext", "dom"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/supabase.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
